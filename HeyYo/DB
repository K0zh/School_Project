-------------------------------------------------------------------------------------
-- 매칭 테이블
-------------------------------------------------------------------------------------
--m_num 고유 매칭 번호
--m_id 신청한 사용자 id
--m_date 신청 시간
--introduce 소개글
--accept 수락 및 거절 

drop table matching purge ;
create table matching(
	m_name varchar2(20),
	m_num number,
	m_id number,
	m_date date default sysdate,
	introduce varchar2(100),
	accept varchar2(10)
);
 
-------------------------------------------------------------------------------------
-- 매칭 상세 테이블
-------------------------------------------------------------------------------------
 
drop table matching purge ;
create table matching_detail(
	md_num number,
	md_id1 number,
	md_id2 number,
	md_date date default sysdate,
	state varchar2(10)
);

 
-------------------------------------------------------------------------------------
-- 쪽지 테이블
-------------------------------------------------------------------------------------
 
drop table message purge ;
create table message(
	ms_num number primary key,
	sender varchar2(20) not null,
	receiver varchar2(20) not null,
	ms_content varchar2(200) not null,
	ms_date date default sysdate,
	ms_state varchar2(2) default 'n'
);

drop sequence ms_seq;
create sequence ms_seq start with 1 increment by 1 nocache ;