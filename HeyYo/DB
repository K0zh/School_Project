<<<<<<< HEAD

-- id 회원 고유 번호 
-- email 이메일(로그인 id)
-- pw 비밀번호
-- name 이름
-- gender 성별
-- hp 핸드폰 번호
-- hpopen 공개 유무 설정 
-- birthday 생년월일
-- address 주소	
-- talentDt 할 수 있는 재능
-- talentGet 필요한 재능
-- image 회원 이미지
-- grade number 회원 등급
-- credibility 신뢰도
-- R_date 가입일


drop sequence memseq;
create sequence memseq start with 1 increment by 1 nocache ;
drop table members purge;
create table members(
	id number primary key,
	email varchar2(30) not null,
	pw varchar2(30) not null,
	name varchar2(30) not null,
	gender varchar2(10) not null,
	hp number not null,
	hpopen varchar2(10) not null,
	birthday date,
	address varchar2(30),	
	talentDt varchar2(30),
	talentGet varchar2(30),
	image varchar2(30),
	grade number default 3,
	credibility number default 0,
	R_date date default sysdate
);

-- 추가
insert into members(id, email, pw, name, gender, hp, hpopen, birthday, address, talentDt, talentGet, credibility)
values(memseq.nextval,'admin@admin.com','admin','adminN','남',0101234567, '공개','2016-06-16','서울강북','#음악','#춤',1);

insert into members(id, email, pw, name, gender, hp, hpopen, birthday, address, talentDt, talentGet, credibility)
values(memseq.nextval,'abc@naver.com','1','홍길동','남',0101234567, '공개','2016-06-16','서울강북','#음악','#춤',1);

insert into t_members(num, email, pw, name, gender, hp, hpopen, birthday, address, talentDt, talentGet, M_like)
values(t_memseq.nextval,'abc@naver.com','1','홍길동','남',0101234567, '공개','2016-06-16','서울강북','#음악','#춤',1);
 
commit ;
	

-------------------------------------------------------------------------------------
-- 콘텐츠 테이블
-------------------------------------------------------------------------------------

-- id 등록한 회원의 아이디 값
-- num 게시글 순번
-- subject 게시글 제목
-- talent 찾기 또는 요청 하려는 재능
-- c_date 게시글 등록일
-- s_day 약속일
-- address 주소(ex. 대한민국 서울시 강남구 ..)
-- lat 위도
-- lng 경도
-- location 좌표
-- personnel 필요인원
-- gender 성별
-- content 본문 내용
-- close 마감 구분
-- type 게시판 구분  

drop sequence conseq;
create sequence conseq start with 1 increment by 1 nocache ;
drop table contents purge ;

create table contents(
	id	 number primary key,
	num number,
	subject varchar2(50),
	talent	varchar2(100),		
	c_date date default sysdate,
	s_day date,
	address varchar2(100),
	lat number,
	lng number,
	personnel number,
	gender varchar2(10),
	content varchar2(300),
	closed varchar2(10),
	type varchar2(10)
);
-------------------------------------------------------------------------------------
